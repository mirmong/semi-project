	function plusLike(no) {
		var proNo = document.getElementById("product-no").innerHTML;
		var custNo = document.getElementById("customer-no"+no).innerHTML;

		var xhr = new XMLHttpRequest();
		
		xhr.onreadystatechange = function() {
