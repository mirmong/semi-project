		xhr.open("GET", "helplike.jsp?proNo="+proNo+"&custNo="+custNo+"&plusOrMinus=plus");
		xhr.send();
	}
	
	function minusLike(no) {
		var proNo = document.getElementById("product-no").innerHTML;
